generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Banner {
  id    Int    @id @default(autoincrement())
  image String

  @@map("banners")
}


model User {
    id       Int     @id @default(autoincrement())
    name     String?
    email    String  @unique
    password String

    @@map("users")
}

model Team {
    id        Int    @id @default(autoincrement())
    post      String
    teamOrder Int
    name      String
    slug      String
    image     String
    message   String

    @@map("teams")
}

model Blog {
    id          Int      @id @default(autoincrement())
    title       String
    slug        String
    date        DateTime @default(now())
    image       String
    description String

    @@map("blogs")
}


model Images {
    id        Int     @id @default(autoincrement())
    image     String?
}

model Video {
    id        Int     @id @default(autoincrement())
    videoLink String?
}