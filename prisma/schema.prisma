generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String

  @@map("users")
}

model Team {
  id        Int    @id @default(autoincrement())
  post      String
  teamOrder Int
  name      String
  slug      String
  image     String
  message   String

  @@map("teams")
}

model Blog {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String
  date        DateTime @default(now())
  image       String
  description String

  @@map("blogs")
}

model Images {
  id    Int     @id @default(autoincrement())
  image String?
}

model Video {
  id        Int     @id @default(autoincrement())
  videoLink String?
}

model Job {
  id               String    @id @default(cuid())
  title            String
  slug             String    @unique
  type             String
  level            String?
  vacancies        Int?
  salary           String?
  skills           String[]  @default([])
  responsibilities String[]  @default([])
  qualifications   String[]  @default([])
  experience       String?
  applyBefore      DateTime?
  createdAt        DateTime  @default(now())
}

model Product {
  id          String   @id @default(cuid())
  title       String
  slug        String
  description String?
  excrept     String?
  images      String[]
  pimage      String
  categoryId  Int
  brandId     Int
  category    Category @relation(fields: [categoryId], references: [id])
  brand       Brand    @relation(fields: [brandId], references: [id])
}

model Category {
  id   Int    @id @default(autoincrement())
  name String
  slug String

  products Product[]

  @@map("pcategory")
}

model Brand {
  id   Int    @id @default(autoincrement())
  name String
  slug String

  products Product[]

  @@map("brand")
}

model Banner {
  id          Int    @id @default(autoincrement())
  image       String
  title       String
  position    Int
  description String
  text        String
  link        String

  @@map("banners")
}

model Customer {
  id          Int    @id @default(autoincrement())
  image       String
  title       String
  position    Int
  description String

  @@map("customers")
}

model Distributor {
  id       Int    @id @default(autoincrement())
  image    String
  position Int

  @@map("distributors")
}
